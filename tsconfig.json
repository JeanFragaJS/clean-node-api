{ 
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap":true,
    "traceResolution": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports":true,
    "baseUrl": ".",
    "rootDirs": [
      "./src"
    ],
    "paths": {
      "@/*": ["./src/*"],
    },
    "experimentalDecorators": true,
    //Habilita suporte experimental para decoradores
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]

}