{ 
  "compilerOptions": {
    "target": "ES2021",
    "moduleResolution": "node",
    "module": "commonJS",
    "lib": ["ES2021"],
    "sourceMap":true,
    "outDir": "dist",
    "traceResolution": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports":true,
   
    //Inclui por deafault os tipos do ES2021
    "esModuleInterop": true,
    "allowJs": true,
    "alwaysStrict":true,
    // fornece ajustes de comportamento no tempo de execução do mecanismo
    // JavaScript para melhorar o desempenho e faz com que um conjunto de 
    // erros seja lançado em vez de ignorá-los silenciosamente.
    "baseUrl": "src",
    "rootDirs": [
      "src"
    ],
    "paths": {
      "@/*": ["*"],
    },
    "experimentalDecorators": true,
    //Habilita suporte experimental para decoradores
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src",
  ],

  "exclude": [
    "**/*.spaec.ts",
    "**/*.test.ts"
  ]

}